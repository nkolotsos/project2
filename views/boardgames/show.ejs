<%- include('../partials/header') %>

<section id="show-page">
  <div>name: </div>
  <div><%= boardgame.name %></div>
  <div>Year Published: </div>
  <div><%= boardgame.yearpublished %></div>
  <div>Min Players: </div>
  <div><%= boardgame.minPlayers %></div>
  <div>Max Players: </div>
  <div><%= boardgame.maxPlayers %></div>
  <div>Min Age: </div>
  <div><%= boardgame.minAge %></div>
  <div>Max Age: </div>
  <div><%= boardgame.maxAge %></div>
</section>

<br><br><h2>Reviews</h2>
<form id="add-review-form" method="POST"
  action="/boardgames/<%= boardgame._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3" selected>3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <input type="submit" value="Add Review">
</form>

<% if (boardgame.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% boardgame.reviews.forEach(function(r) { %>
        <tr>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>

<%- include('../partials/footer') %>
